import React, { Fragment, useState, useEffect } from "react";
import CharacterCard from "../CharacterCard";
import "./styles.scss";

function ListOfCaracters() {
  const [page, setPage] = useState(1);
  const [api, setApi] = useState(
    `https://rickandmortyapi.com/api/character/?page=${page}`
  );
  const [mas, setMas] = useState(false);
  const userFetchResponse = useFetch(api, { isLoading: true, data: null });

  if (!userFetchResponse.items || userFetchResponse.isLoading) {
    return "Loading...";
  }
  const nextPage = userFetchResponse.items.info.next;
  const characters = userFetchResponse.items.results;
  console.log(characters);

  // window.addEventListener("scroll", () => {
  //   if (
  //     window.innerHeight + document.documentElement.scrollTop !==
  //     document.documentElement.offsetHeight
  //   ) {
  //     return;
  //   } else {
  //     setMas(true);
  //   }
  // });

  return (
    <Fragment>
      <main>
        <ul className="listCharacters">
          {characters.map((character) => (
            <li className="characters" key={character.id}>
              <CharacterCard character={character} />
            </li>
          ))}
        </ul>
      </main>
    </Fragment>
  );
}

export default ListOfCaracters;

